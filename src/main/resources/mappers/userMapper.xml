<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.HiBook.user.dao.UserDAO">
 	<select id="selectUserListTest" resultType="map">
 		SELECT
 			*
 		FROM
 			`user`
 	</select>
 	<select id="existLoginId" parameterType="String" resultType="boolean">
 		SELECT
 			COUNT(1)
 		FROM
 			`user`
 		WHERE 
 			`loginId` = #{loginId}
 	</select>
 	
 	<insert id="insertUser" parameterType="map">
 		INSERT INTO `user`
 		(
 			 `name`
			,`loginId`
			,`password`
			,`phoneNumber`
			,`postcode`
			,`address`
			,`detailAddress`
			,`kakaoCheck`
			,`profileImage`
			,`createdAt`
			,`updatedAt`
			, `email`
			, `kakaoId`
 		)
 		VALUES
		(
			#{name}
			,#{loginId}
			,#{password}
			,#{phoneNumber}
			,#{postcode}
			,#{address}
			,#{detailAddress}
			,#{kakaoCheck}
			,#{profileImage}
			, NOW()
			, NOW()
			, NULL
			, NULL
		)
 		
 	</insert>
 	<insert id="insertKakaoUser" parameterType="map" useGeneratedKeys="true" keyProperty="id">
 		INSERT INTO `user`
 		(
 			`name`
			,`loginId`
			,`password`
			,`phoneNumber`
			,`postcode`
			,`address`
			,`detailAddress`
			,`kakaoCheck`
			,`profileImage`
			,`createdAt`
			,`updatedAt`
			, `email`
			, `kakaoId`
 		)
 		VALUES
		(
			#{name}
			,#{loginId}
			, NULL
			, NULL
			, NULL
			, NULL
			, NULL
			,#{kakaoCheck}
			,#{profileImage}
			, NOW()
			, NOW()
			,#{email}
			, #{kakaoId}
		)
 	</insert>
 	
 	
 	<select id="selectUserByLoginIdPassword" resultType="com.HiBook.user.model.User" parameterType="map">
 		SELECT
 			`id`
 			,`name`
			,`loginId`
			,`password`
			,`phoneNumber`
			,`postcode`
			,`address`
			,`detailAddress`
			,`kakaoCheck`
			,`profileImage`
			,`createdAt`
			,`updatedAt`
			, `email`
			, `kakaoId`
		FROM
			`user`
		WHERE 
			`loginId` = #{loginId}
			AND
			`password` = #{password}
 	</select>
 	
 	<select id="selectUserById" parameterType="int" resultType="com.HiBook.user.model.User">
 		SELECT 
 			`id`
 			,`name`
			,`loginId`
			,`password`
			,`phoneNumber`
			,`postcode`
			,`address`
			,`detailAddress`
			,`kakaoCheck`
			,`profileImage`
			,`createdAt`
			,`updatedAt`
			, `email`
			, `kakaoId`
		FROM
			`user`
		WHERE
			`id` = #{userId}
 	</select>
 	<select id="selectUserListBYId" parameterType="int" resultType="com.HiBook.user.model.User">
 			SELECT 
 			`id`
 			,`name`
			,`loginId`
			,`password`
			,`phoneNumber`
			,`postcode`
			,`address`
			,`detailAddress`
			,`kakaoCheck`
			,`profileImage`
			,`createdAt`
			,`updatedAt`
			, `email`
			, `kakaoId`
		FROM
			`user`
		WHERE
			`id` = #{userId}
 	</select>
 	<select id="selectUserByEmail" resultType="com.HiBook.user.model.User">
 		SELECT 
 			`id`
 			,`name`
			,`loginId`
			,`password`
			,`phoneNumber`
			,`postcode`
			,`address`
			,`detailAddress`
			,`kakaoCheck`
			,`profileImage`
			,`createdAt`
			,`updatedAt`
			,`email`
			, `kakaoId`
		FROM
			`user`
		WHERE
			`email` = #{email}
 	</select>
 	<select id="selectUserByKakaoId" resultType="com.HiBook.user.model.User" parameterType="String">
 		SELECT 
 			`id`
 			,`name`
			,`loginId`
			,`password`
			,`phoneNumber`
			,`postcode`
			,`address`
			,`detailAddress`
			,`kakaoCheck`
			,`profileImage`
			,`createdAt`
			,`updatedAt`
			,`email`
			, `kakaoId`
		FROM
			`user`
		WHERE
			`kakaoId` = #{kakaoId}
 	</select>
 	<update id="informationUpdate" parameterType="map">
 		UPDATE `user`
 		SET
 			`name` = #{name}
 			, `loginId` = #{loginId}
 			, `phoneNumber` = #{phoneNumber}
 			,`postcode` = #{postcode}
			,`address` = #{address}
			,`detailAddress` = #{detailAddress}
 			, `profileImage` = #{imagePath}
 			, `updatedAt` = NOW()
 		WHERE
 			`id` = #{userId}
 		
 	
 	</update>
 	<update id="userAddressUpdate" parameterType="map">
 		UPDATE `user`
 		SET
 			 `phoneNumber` = #{phoneNumber}
 			,`postcode` = #{postcode}
			,`address` = #{address}
			,`detailAddress` = #{detailAddress}
 			, `updatedAt` = NOW()
 		WHERE
 			`id` = #{userId}
 	</update>
 </mapper>