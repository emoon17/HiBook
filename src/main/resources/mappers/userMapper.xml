<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.HiBook.user.dao.UserDAO">
 	<select id="selectUserListTest" resultType="map">
 		SELECT
 			*
 		FROM
 			`user`
 	</select>
 	<select id="existLoginId" parameterType="String" resultType="boolean">
 		SELECT
 			COUNT(1)
 		FROM
 			`user`
 		WHERE 
 			`loginId` = #{loginId}
 	</select>
 	
 	<insert id="insertUser" parameterType="map">
 		INSERT INTO `user`
 		(
 			 `name`
			,`loginId`
			,`password`
			,`phoneNumber`
			,`address`
			,`kakaoCheck`
			,`profileImage`
			,`createdAt`
			,`updatedAt`
 		)
 		VALUES
		(
			#{name}
			,#{loginId}
			,#{password}
			,#{phoneNumber}
			,#{address}
			,#{kakaoCheck}
			,#{profileImage}
			, NOW()
			, NOW()
		)
 		
 	</insert>
 	
 	<select id="selectUserByLoginIdPassword" resultType="com.HiBook.user.model.User" parameterType="map">
 		SELECT
 			`id`
 			,`name`
			,`loginId`
			,`password`
			,`phoneNumber`
			,`address`
			,`kakaoCheck`
			,`profileImage`
			,`createdAt`
			,`updatedAt`
		FROM
			`user`
		WHERE 
			`loginId` = #{loginId}
			AND
			`password` = #{password}
 	</select>
 </mapper>